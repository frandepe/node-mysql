<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="POST">
            <div class="input-group mb-3">
              <input
                value="{{link.title}}"
                class="form-control"
                type="text"
                name="title"
                placeholder="Title"
                autofocus
              />
            </div>
            <div class="input-group mb-3">
              <input
                value="{{link.url}}"
                class="form-control"
                type="url"
                name="url"
                placeholder="Url"
              />
            </div>
            <div class="input-group mb-3">
              <textarea
                name="description"
                class="form-control"
                rows="2"
                placeholder="Description"
              >{{link.description}}</textarea>
            </div>
            <div class="input-group mb-3">
              <button class="btn btn-success col-12">Edit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>